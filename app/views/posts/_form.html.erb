<%= render "layouts/errors", :object => @post %>


<div class="form-group">
  <%= form_for @post do |f| %>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>
    <%= f.submit  %>
  <% end %>
</div>